<form name="Create" id="Create" method="post" action="post_bug.cgi" class="enter_bug_form" enctype="multipart/form-data" onsubmit="return validateEnterBug(this)">
	<input type="hidden" name="product" value="[% product.name FILTER html %]">
	<input type="hidden" name="token" value="[% token FILTER html %]">
	<input type="hidden" name="form_name" value="enter_bug">
	<div class="row">
		<div class="row">
			<p>
				[% PROCESS 'bug/create/user-message.html.tmpl' %]
			</p>
			<p>
				[% INCLUDE bug/field.html.tmpl
				bug = default, field = bug_fields.product, editable = 0,
				value = product.name %]

				[% INCLUDE bug/field.html.tmpl
				bug = default, field = bug_fields.reporter, editable = 0,
				value = user.login %]
			  
				(<span class="required_star">*</span> =
				<span class="required_explanation">Required Field</span>)
			</p>
			<div class="collapse-controller">
				<a id="expert_fields_controller" class="controller bz_default_hidden" href="javascript:TUI_toggle_class('expert_fields')">
					Hide Advanced Fields
				</a>
				[%# Show the link if the browser supports JS %]
				<script type="text/javascript">
					YAHOO.util.Dom.removeClass('expert_fields_controller', 
											'bz_default_hidden');
				</script>
			</div>
		</div>
		<div class="row">
		[%# We cannot use the select block in these two cases for various reasons. %]
			<div class="col-md-5">
				<div class="bug-field-grid bz_field_lmb_not_broken">
				  [% PROCESS section_component %]
				</div>
				<div class="bug-field-grid bz_field_lmb_not_broken">
				  [% PROCESS section_component_description %]
				</div>
				<div class="bug-field-grid bz_field_lmb_not_broken">
					[% PROCESS section_customfields_with_keyword_clust_8 %]				
				</div>
			</div>
			<div class="col-md-4">
				<div class="bug-field-grid">
					[% PROCESS section_severity %]
				</div>
				<div class="expert_fields bug-field-grid">
					[% PROCESS section_choose_priority %]
				</div>
				<div class="bug-field-grid">
					[% PROCESS section_rep_platform %]
				</div>
				<div class="bug-field-grid">
					[% PROCESS section_customfields_with_keyword_clust_6 %]
				</div>
			</div>
			<div class="col-md-3">
				<div class="bug-field-grid bz_field_lmb_not_broken">
					[% PROCESS section_customfields_with_keyword_clust_2 %]
				</div>
				<div class="bug-field-grid bz_field_lmb_not_broken">
					[% PROCESS section_op_sys %]
				</div>
			</div>
		</div>
		<div class="row">
			<div class="expert_fields">
				<div class="col-md-6">				
					<div class="bug-field-grid">
						[% PROCESS section_status %]
					</div>
					<div class="bug-field-grid">
						[% PROCESS section_assignee %]
						[% PROCESS section_spacer %]
						[% PROCESS section_qa %]
					</div>
					<div class="bug-field-grid">
						[% PROCESS section_choose_cc %]
						[%# We do not use default CC %]
						[%# We need default CC though so Js works as expected %]
						[% PROCESS section_default_cc %]
					</div>
				</div>
				<div class="col-md-6">
					<div class="bug-field-grid collapse-controller">
					  <a href="javascript:void(0);" data-toggle="collapse" data-target="#timetracking" class="default-open" style="display:inherit;">Timetracking</a>
					</div>
					<div id="timetracking" class="collapse in">
						<div class="bug-field-grid bz_field_lmb_not_broken">
							[% PROCESS section_timetracking %]
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row static-children">
		<div class="col-md-6">
			<div class="bug-field-grid">
				[% PROCESS section_summary %]
			</div>
			<div class="bug-field-grid">
				[% PROCESS section_description %]
			</div>
			<div class="bug-field-grid">
				[% PROCESS section_customfields_with_keyword_clust_1 %]
			</div>
		</div>
		<div class="col-md-6">
			<div class="bug-field-grid expert_fields">
				<div class="bug-field-grid collapse-controller">
				  <a href="javascript:void(0);" data-toggle="collapse" data-target="#moreinfo" class="default-open" style="display:inherit;">More Details</a>
				</div>
				<div id="moreinfo" class="collapse in">
					<div class="bug-field-grid">
						[% PROCESS section_alias %]
					</div>
					<div class="bug-field-grid bz_field_lmb_not_broken">
						[% PROCESS section_url %]
					</div>
					<div class="bug-field-grid">
						[% PROCESS section_keywords %]
					</div>
					<div class="bug-field-grid">
						[% PROCESS section_dependson %]
					</div>
					<div class="bug-field-grid">
						[% PROCESS section_blocks %]
					</div>
					<div class="bug-field-grid">
						[% PROCESS section_see_also %]
					</div>
					<div class="bug-field-grid">
						[% PROCESS section_restrict_visibility %]
					</div>						
				</div>
			</div>
			<div class="bug-field-grid expert_fields">
				[% PROCESS section_flags %]
			</div>
		</div>
	</div>
	<div class="row static-children">
		<div class="col-md-12">
			<div class="bug-field-grid">
				[% PROCESS section_attachment %]
			</div>
		</div>
	</div>	
	<div class="row static-children">
		<div class="col-md-12">
			<div class="bug-field-grid expert_fields">
				[% PROCESS section_customfields_with_keyword_clust_6 %]
				[% PROCESS section_customfields %]
			</div>
			<div class="bug-field-grid expert_fields" style="display:none;">
				[%# the version is needed but we do not use it. %]
				[% PROCESS section_version %]
				[%# We do not use Target Milestone - no need to clutter the interface this is commented out %]
				[%# PROCESS section_target_milestone %]	
			</div>
			<div class="bug-field-grid">
				[%# Form controls for entering additional data about the bug being created. %]
				[% Hook.process("form") %]
			<div>
				[% PROCESS section_submit %]
			</div>
		</div>
	</div>
</form>

[%# Links or content with more information about the bug being created. %]
[% Hook.process("end") %]

[% PROCESS global/footer.html.tmpl %]

[%############################################################################%]
