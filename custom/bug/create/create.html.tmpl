						  [% END %]>
						  [% c.name FILTER html -%]
						</option>
						[% IF Param("usemenuforusers") %]
						  [% INCLUDE build_userlist default_user = c.default_assignee,
													userlist = assignees_list %]
						  [% INCLUDE build_userlist default_user = c.default_qa_contact,
													userlist = qa_contacts_list %]
						[% END %]
					  [%- END %]
					</select>
