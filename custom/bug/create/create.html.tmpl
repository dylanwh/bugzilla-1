[%############################################################################%]
[%# This is where we define the blocks that we need                          #%]
[%############################################################################%]


	[%############################################################################%]
	[%# Block for the submit/bookmark buttons                                    #%]
	[%############################################################################%]

	[% BLOCK section_submit %]
				<span>
					<input type="submit" id="commit" class="btn" value="Submit [% terms.Bug %]">
					&nbsp;&nbsp;&nbsp;&nbsp;
					<input type="submit" name="maketemplate" id="maketemplate" class="btn"
					   value="Remember values as bookmarkable template"
					   onclick="bz_no_validate_enter_bug=true" class="expert_fields">
				</span>
	[% END %]

	[%############################################################################%]
	[%# Block for restrict visibility                                            #%]
	[%############################################################################%]

	[% BLOCK section_restrict_visibility %]
				[% IF product.groups_available.size %]
				<div>
					<span>
						<br>
							<strong>Only users in [%+ IF Param('or_groups') %]at least one[% ELSE %]all[% END %] of the selected groups can view this [%+ terms.bug %]: </strong>
						<br>
							<span class="bz_info">
								(Leave all boxes unchecked to make this a public [% terms.bug %].)
							</span>
						<br>
						<br>
						  <!-- Checkboxes -->
						  <input type="hidden" name="defined_groups" value="1">
						  [% FOREACH group = product.groups_available %]
							<input type="checkbox" id="group_[% group.id FILTER html %]"
								   name="groups" value="[% group.name FILTER html %]"
								   [% ' checked="checked"' IF default.groups.contains(group.name)
															  OR group.is_default %]>
							<label for="group_[% group.id FILTER html %]">
							  [%- group.description FILTER html_light %]</label><br>
						  [% END %]
					</span>
				</div>
				[% END %]
	[% END %]

	[%############################################################################%]
	[%# Block for See also                                                       #%]
	[%############################################################################%]

	[% BLOCK section_see_also %]
				[% IF Param('use_see_also') %]
					[% INCLUDE bug/field.html.tmpl
						bug            = default
						field          = bug_fields.see_also
						editable       = 1
						value          = see_also
					%]
				[% END %]
	[% END %]

	[%############################################################################%]
	[%# Block for dependancies (Depends on)                                      #%]
	[%############################################################################%]

	[% BLOCK section_dependson %]
			[% IF user.in_group('editbugs', product.id) %]
			  [% INCLUDE "bug/field-label.html.tmpl"
				field = bug_fields.dependson editable = 1
			  %]
			  <span>
				<input name="dependson" accesskey="d" value="[% dependson FILTER html %]" class="field_value">
			  </span>
			[% END %]
	[% END %]

	[%############################################################################%]
	[%# Block for dependancies Blocks                                            #%]
	[%############################################################################%]

	[% BLOCK section_blocks %]
			  [% INCLUDE "bug/field-label.html.tmpl"
				field = bug_fields.blocked editable = 1
			  %]
			  <span>
				<input name="blocked" accesskey="b" value="[% blocked FILTER html %]" class="field_value">
			  </span>
	[% END %]

	[%############################################################################%]
	[%# Block for Keywords                                                       #%]
	[%############################################################################%]

	[% BLOCK section_keywords %]
			[% IF use_keywords %]
			  [% INCLUDE bug/field.html.tmpl
				bug = default, field = bug_fields.keywords, editable = 1,
				value = keywords, possible_values = all_keywords,
				desc_url = "describekeywords.cgi", value_span = 3
			  %]
			[% END %]
	[% END %]

	[%############################################################################%]
	[%# Block for Attachments                                                    #%]
	[%############################################################################%]

	[% BLOCK section_attachment %]
				[% IF Param("maxattachmentsize") || Param("maxlocalattachment") %]
				<label>Attachment:</label>
				<span>
					<div id="attachment_false" class="field_value bz_default_hidden">
						<input type="button" class="btn" value="Add an attachment" onClick="handleWantsAttachment(true)">
					</div>
					<div id="attachment_true" class="field_value">
						<input type="button" id="btn_no_attachment" value="Don't add an attachment"
							class="bz_default_hidden btn"  onClick="handleWantsAttachment(false)">
						<div>
							<legend>Add an attachment</legend>
							<div class="attachment_entry">
								[% PROCESS attachment/createformcontents.html.tmpl
									flag_types = product.flag_types.attachment
									any_flags_requesteeble = 1
									flag_table_id ="attachment_flags" %]
							</div>
						</div>
					</div>
				</span>
				[% END %]
	[% END %]

	[%############################################################################%]
	[%# Block for Description                                                    #%]
	[%############################################################################%]

	[% BLOCK section_description %]
				<span class="field-label">
					<label>Description:</label>
				</span>
				<span>
					[% defaultcontent = BLOCK %]
						[% IF cloned_bug_id %]
						+++ This [% terms.bug %] was initially created as a clone of [% terms.Bug %] #[% cloned_bug_id %] +++
					[% END %]
					[%-# We are within a BLOCK. The comment will be correctly HTML-escaped
					  # by global/textarea.html.tmpl. So we must not escape the comment here. %]
					[% comment FILTER none %]
				  [%- END %]
				  [% INCLUDE bug/comment.html.tmpl
					 minrows        = 10
					 maxrows        = 25
					 cols           = constants.COMMENT_COLS
					 defaultcontent = defaultcontent
				   %]
					<br>
				</span>
			</div>
			<div class="expert_fields bug-field-grid">
			[% IF user.is_insider %]
				<span>
					&nbsp;&nbsp;
					<input type="checkbox" id="comment_is_private" name="comment_is_private"
					[% ' checked="checked"' IF comment_is_private %]
						onClick="updateCommentTagControl(this, 'comment')">
					<span for="comment_is_private">
					Make description and any new attachment private (visible only to members 
					of the <strong>[% Param('insidergroup') FILTER html %]</strong> group)
					</span>
				</span>
				<script>
					updateCommentTagControl(document.getElementById('comment_is_private'), 'comment');
				</script>
			[% END %]
	[% END %]

	[%############################################################################%]
	[%# Block for Summary                                                        #%]
	[%############################################################################%]

	[% BLOCK section_summary %]
			[% INCLUDE "bug/field-label.html.tmpl"
			  field = bug_fields.short_desc editable = 1
			%]
			<span class="field_value">
			  <input name="short_desc" size="70" value="[% short_desc FILTER html %]"
					 maxlength="255" spellcheck="true" aria-required="true"
					 class="required text_input" id="short_desc">
			</span>
		</div>
		  [% IF feature_enabled('jsonrpc') AND !cloned_bug_id
				AND user.settings.possible_duplicates.value == 'on' %]
		<div id="possible_duplicates_container bug-field-grid" class="bz_default_hidden">
		  <label>Possible<br>Duplicates:</label>
			<span>
				<div id="possible_duplicates">
				</div>
				<script type="text/javascript">
					var dt_columns = [ 
					  { key: "id", label: "[% field_descs.bug_id FILTER js %]",
						formatter: YAHOO.bugzilla.dupTable.formatBugLink },
					  { key: "summary", 
						label: "[% field_descs.short_desc FILTER js %]",
						formatter: "text" },
					  { key: "status",
						label: "[% field_descs.bug_status FILTER js %]",
						formatter: YAHOO.bugzilla.dupTable.formatStatus },
					  { key: "update_token", label: '',
						formatter: YAHOO.bugzilla.dupTable.formatCcButton }
				  ];
				  YAHOO.bugzilla.dupTable.addCcMessage = "Add Me to the CC List";
				  YAHOO.bugzilla.dupTable.init({
					container: 'possible_duplicates',
					columns: dt_columns,
					product_name: '[% product.name FILTER js %]',
					summary_field: 'short_desc',
					options: {
					  MSG_LOADING: 'Searching for possible duplicates...',
					  MSG_EMPTY:   'No possible duplicates found.',
					  SUMMARY:     'Possible Duplicates'
					}
				  });
				</script>
			</span>
		  [% END %]			
	[% END %]

	[%############################################################################%]
	[%# Block for Section Spacer                                                 #%]
	[%############################################################################%]

	[% BLOCK section_spacer %]
	  <div class="bug-field-grid">
		
	  </div>
	[% END %]

	[%############################################################################%]
	[%# Block for target_milestone                                               #%]
	[%############################################################################%]

	[% BLOCK section_target_milestone %]
			  [% IF Param('usetargetmilestone') && Param('letsubmitterchoosemilestone') %]
				[% INCLUDE select field = bug_fields.target_milestone %]
			  [% END %]	
	[% END %]


	[%############################################################################%]
	[%# Block for severity                                                       #%]
	[%############################################################################%]


	[% BLOCK section_severity %]
				[% INCLUDE bug/field.html.tmpl
				  bug = default, field = bug_fields.bug_severity, editable = 1, 
				  value = default.bug_severity %]
	[% END %]
	

	[%############################################################################%]
	[%# Block for choose priority                                                #%]
	[%############################################################################%]


	[% BLOCK section_choose_priority %]
				[% IF Param('letsubmitterchoosepriority') %]
				  [% INCLUDE bug/field.html.tmpl
					bug = default, field = bug_fields.priority, editable = 1, 
					value = default.priority %]
				[% ELSE %]
				  <td colspan="2">&nbsp;</td>
				[% END %]
	[% END %]
	

	[%############################################################################%]
	[%# Block for rep Platform                                                   #%]
	[%############################################################################%]


	[% BLOCK section_rep_platform %]
				[% INCLUDE bug/field.html.tmpl
				  bug = default, field = bug_fields.rep_platform, editable = 1,
				  value = default.rep_platform %]
	[% END %]


	[%############################################################################%]
	[%# Block for Default OS                                                     #%]
	[%############################################################################%]

	[% BLOCK section_op_sys %]
				[% INCLUDE bug/field.html.tmpl 
				  bug = default, field = bug_fields.op_sys, editable = 1, 
				  value = default.op_sys %]
				[% IF (!Param('defaultplatform') || !Param('defaultopsys')) && !cloned_bug_id %]
				<div>
					<div id="os_guess_note" class="comment">
						<div>We've made a guess there
							[% IF Param('defaultplatform') %]
							. Please check it
							[% ELSIF Param('defaultopsys') %]
							platform. Please check it
							[% ELSE %]
							please check
							[% END %]
							and make any corrections if necessary.
						</div>
					</div>
				</div>
				[% END %]
	[% END %]

	[%############################################################################%]
	[%# Block for Version                                                        #%]
	[%############################################################################%]

	[% BLOCK section_version %]
				  [% INCLUDE "bug/field-label.html.tmpl"
					field = bug_fields.version editable = 1 rowspan = 4
				  %]
				</span>
				<select name="version" id="version" size="5" aria-required="true"
						class="required">
				  [%- FOREACH v = version %]
					[% NEXT IF NOT v.is_active %]
					<option value="[% v.name FILTER html %]"
					  [% ' selected="selected"' IF v.name == default.version %]>[% v.name FILTER html -%]
					</option>
				  [%- END %]
				</select>
	[% END %]


	[%############################################################################%]
	[%# Block for Default CC                                                     #%]
	[%############################################################################%]

	[% BLOCK section_default_cc %]
				<span class="field-label">
					<label>
						Default [% field_descs.cc FILTER html %]:
					</label>
				</span>
				<div id="initial_cc">
				</div>
	[% END %]

	[%############################################################################%]
	[%# Block for choosing CC                                                    #%]
	[%############################################################################%]

	[% BLOCK section_choose_cc %]
				[% INCLUDE "bug/field-label.html.tmpl"
				  field = bug_fields.cc editable = 1 
				%]
				[% INCLUDE global/userselect.html.tmpl
				   id => "cc"
				   name => "cc"
				   value => cc
				   disabled => cc_disabled
				   size => 30
				   multiple => 5
				   classes => ("field_value")
				 %]
	[% END %]

	[%############################################################################%]
	[%# Block for QA                                                             #%]
